import { fetch } from 'wix-fetch';
import { getSecret } from 'wix-secrets-backend';

export async function getViatorProductDetails(productCodesArray) {
  try {
    const apiKey = await getSecret("viatorApiKey");
    const apiUrl = 'https://api.viator.com/partner/v2/products/bulk';

    const response = await fetch(apiUrl, {
      method: 'POST',
      headers: {
        'API-key': apiKey,
        'Accept-Language': 'es-ES', // Ajusta seg√∫n prefieras
        'Accept': 'application/json;version=2.0',
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({ productCodes: productCodesArray })
    });

    if (!response.ok) {
      throw new Error(`HTTP error! status: ${response.status}`);
    }

    const data = await response.json();
    return data.data; // Retorna solo los productos
  } catch (error) {
    console.error('Error fetching Viator products:', error);
    throw error; // Propaga el error para manejarlo en el frontend
  }
}